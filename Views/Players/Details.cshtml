@model Rekreatistika.Models.PlayerViewModels.PlayerDetailsViewModel

@{
    ViewData["Title"] = "Detalji igrača";
}

<div class="inner">
    <div class="row">
        <div class="panel panel-default" style="padding: 0;">
            @if (@Model.IsAdmin) { 
                <a href=@Url.Action("Edit", "Players", new {id = @Model.Id}) class="btn btn-primary" title="Izmijeni"><i class="fa fa-pencil"></i></a>
            }
            <div class="panel-body">
                <div class="col-md-4 col-xs-12 col-sm-4 col-lg-4">
                    <img src="/images/players/@Model.AvatarPath" alt="Image not found" onerror="this.onerror = null;this.src = '/images/player_avatar.png';" class="img-rounded img-responsive" />
                </div>
                <div class="col-md-8 col-xs-12 col-sm-6 col-lg-8">
                    <div class="container">
                        <h2>@Model.Name</h2>
                        <p>@Model.Nickname</p>


                    </div>
                    <hr>
                    <ul class="container details">
                        <li>
                            <p><span class="glyphicon glyphicon-user one" style="width: 50px;"></span>@String.Format("{0:dd MMM yyyy}", @Model.DateOfBirth)</p></li>
                        @if (!string.IsNullOrEmpty(@Model.Email))
                        {
                            <li>
                                <p><span class="glyphicon glyphicon-envelope one" style="width: 50px;"></span>@Model.Email</p></li>
                        }
                        else
                        {
                            <li>
                                <p><span class="glyphicon glyphicon-envelope one" style="width: 50px;"></span>Nije upisan email</p></li>
                        }
                    </ul>
                    <hr>
                    @*<div class="col-sm-5 col-xs-6 tital ">Date Of Joining: 15 Jun 2016</div>*@
                </div>
            </div>
        </div>
    </div>
</div>


<div>
    
    <a asp-action="Index">Pregled svih igrača</a>
</div>

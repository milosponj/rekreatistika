<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="/css/main.css" />
    <link rel="stylesheet" href="~/css/custom-bootstrap-additions.css" />
    <environment include="Development">
        <link rel="stylesheet" href="~/lib/css/bootstrap.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="~/lib/css/bootstrap.min.css" />
    </environment>

</head>
<body style="position: relative;
  min-height: 100vh;">
    <header id="header">
        @await Html.PartialAsync("_LoginPartial")
    </header>
    <div class="container body-content">
        @RenderBody()
        <hr />
    </div>
    <script src="/js/jquery.min.js"></script>
    <script src="/js/jquery.scrolly.min.js"></script>
    <script src="/js/skel.min.js"></script>
    <script src="/js/util.js"></script>
    <script src="/js/main.js"></script>
    <script src="/js/list.min.js"></script>
    <script src="/js/match_details.js"></script>
    @RenderSection("Scripts", required: false)
    <environment include="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/js/bootstrap.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/js/bootstrap.min.js"></script>
    </environment>
</body>

</html>
<br />
<br />
<footer style="position:absolute; bottom: 0; width: 100%; height: 60px; background: #1B2327;">
    <div class="outer">
        <div class="inner">
            <br/>
            <p style="color:white">Rekreatistika™ 2019</p>
        </div>
    </div>
</footer>